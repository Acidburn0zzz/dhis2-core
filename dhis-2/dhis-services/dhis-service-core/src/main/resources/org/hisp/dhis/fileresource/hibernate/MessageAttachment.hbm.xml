<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
        [<!ENTITY identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm">]
        >

<hibernate-mapping>
    <class name="org.hisp.dhis.fileresource.MessageAttachment" table="messageAttachment">

        <cache usage="read-write"/>

        <id name="id" column="messageattachmentid">
            <generator class="native"/>
        </id>
        &identifiableProperties;

        <many-to-one name="attachment"
                     class="org.hisp.dhis.fileresource.FileResource"
                     column="fileresourceid"
                     not-null="true" />

        <many-to-one name="message"
                     class="org.hisp.dhis.message.Message"
                     column="messageid"
                     foreign-key="fk_messageattachment_message"
                     not-null="false" />

    </class>
</hibernate-mapping>